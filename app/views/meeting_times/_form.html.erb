      <h2><%= pluralize(@meeting_time.errors.count, "error") %> prohibited this meeting_time from being saved:</h2>

      <ul>
      <% @meeting_time.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <fieldset>
    <legend>Day(s)</legend>
    <div class="field day">
      <%= f.label :monday %><br />
      <%= f.check_box :monday %>
    </div>
    <div class="field day">
      <%= f.label :tuesday %><br />
      <%= f.check_box :tuesday %>
    </div>
    <div class="field day">
      <%= f.label :wednesday %><br />
      <%= f.check_box :wednesday %>
    </div>
    <div class="field day">
      <%= f.label :thursday %><br />
      <%= f.check_box :thursday %>
    </div>
    <div class="field day">
      <%= f.label :friday %><br />
      <%= f.check_box :friday %>
    </div>
    <div class="field day">
      <%= f.label :saturday %><br />
      <%= f.check_box :saturday %>
    </div>
    <div class="field day">
      <%= f.label :sunday %><br />
      <%= f.check_box :sunday %>
    </div>
  </fieldset>
  <div class="field">
    <%= f.label :period %><br />
    <%= f.text_field :period %>
  </div>
  <div class="field">
    <%= f.label :startTime %><br />
    <%= f.time_select :startTime, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :endTime %><br />
    <%= f.time_select :endTime, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :section %><br />
    
    <%= f.collection_select(:section_id, current_person.sections, :id, :name, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label :startDate %><br />
    <%= f.date_select :startDate, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :endDate %><br />
    <%= f.date_select :endDate, :prompt => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
