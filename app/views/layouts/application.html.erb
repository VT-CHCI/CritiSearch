    <%= include_gon %>

    <style>
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body class='page <%= controller.controller_name %>'>
    <!--[if lt IE 7]>
